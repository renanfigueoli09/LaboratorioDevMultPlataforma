<div class="container text-center">
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-primary">
            <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">SISTEMA WEB</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active" aria-current="page" href="/">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            &nbsp;
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            <p class="text-start fs-5">Cadastrar - Agendamento de Potenciais Clientes</p>
            <p class="text-start fs-6">Sistema Utilizado para agendamento de serviços.</p>
            <p>
            <div class="container text-center">
                <div class="row bg-primary">
                    <div class="col text-light">
                        Nome
                    </div>
                    <div class="col text-light">
                        Telefone
                    </div>
                    <div class="col text-light">
                        Origem
                    </div>
                    <div class="col text-light">
                        Data de Contato
                    </div>
                    <div class="col text-light">
                        Observação
                    </div>
                    <div class="col text-light">
                        Ações
                    </div>
                </div>
                <div class="row">
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                </div>
                {{#each post}}
                {{#dataValues}}
                <div class="row">
                    <div class="col">
                        {{nome}}
                    </div>
                    <div class="col">
                        {{telefone}}
                    </div>
                    <div class="col">
                        {{origem}}
                    </div>
                    <div class="col" id="data_consulta">
                        {{data_contato}}
                    </div>
                    <div class="col">
                        {{observacao}}
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary"><a href="/editar/{{id}}"
                                style="color:inherit">Editar</a></button>
                        <button type="button" id="button-delete" class="btn btn-primary">Excluir</button>
                    </div>
                </div>
                {{/dataValues}}
                {{/each}}
            </div>
            </p>
        </div>
        <div class="modal container text-center" id="modal" style="display:none;
        position: fixed; top:50; left: 50; width: 50%; height: 50%; justify-content: center; align-items: center;">
            <div class="modal">
                <h2>Deseja Mesmo Excluir?</h2>
                <button type="button" id="button-close" class="btn btn-primary">fechar</button>
                <button type="button" class="btn btn-primary"><a href="/excluir/{{id}}"
                        style="color:inherit">Excluir</a></button>
            </div>
        </div>

        <div class="col-1">
            &nbsp;
        </div>
    </div>
</div>
<script>
    var buttonDelete = document.getElementById("button-delete");
    var modal = document.getElementById("modal");
    var buttonClose = document.getElementById("button-close");

    buttonDelete.addEventListener("click", function () {
        modal.style.display = "block";
    });

    buttonClose.addEventListener("click", function () {
        modal.style.display = "none";
    });

    var data_consulta = document.getElementById("data_consulta")
    const dataCadastro = new Date(data_consulta.innerHTML);
    const dia =
        dataCadastro.getUTCDate().toLocaleString().length == 1
            ? '0' + dataCadastro.getUTCDate().toLocaleString().length
            : dataCadastro.getUTCDate();
    const mes =
        (dataCadastro.getMonth() + 1).toString().length == 1
            ? '0' + (dataCadastro.getMonth() + 1).toString()
            : (dataCadastro.getMonth() + 1).toString();
    const ano = dataCadastro.getFullYear().toString();
    document.getElementById("data_consulta").innerHTML = `${dia}/${mes}/${ano}`;
</script>