<script>
    validarTelefone = () => {
        var telefone = document.getElementById("telefone").value;
        var regexTelefone = /^\d{10}$/;

        if (!regexTelefone.test(telefone)) {
            alert("Por favor, insira um número de telefone válido com 10 dígitos.");
            return false;
        }

        return true;
    }
</script>
<script>
    $(document).ready(function () {
        $("#telefone").inputmask("(99) 9999-9999"); 

        $("#telefone").on('input', function () {
            var telefone = $(this).val().replace(/[^0-9]/g, '');
            var telefoneValido = telefone.length === 10;

            if (!telefoneValido) {
                $("#telefone-erro").text("Número de telefone inválido.");
            } else {
                $("#telefone-erro").text("");
            }
        });
    });
</script>
